{
  "$schema-template": "4.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "docker": {
                "username": "$CONTAINER_REGISTRY_USERNAME_docker",
                "password": "$CONTAINER_REGISTRY_PASSWORD_docker",
                "address": "docker.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.2",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.2",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "SmartPillbox": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.SmartPillbox}",
              "createOptions": {
                "HostConfig": {
                  "Privileged": true,
                  "Devices": [
                    {
                      "PathOnHost": "/dev/vchiq",
                      "PathInContainer": "/dev/vchiq",
                      "CgroupPermissions": "mrw"
                    },
                    {
                      "PathOnHost": "/dev/snd",
                      "PathInContainer": "/dev/snd",
                      "CgroupPermissions": "mrw"
                    },
                    {
                      "PathOnHost": "/dev/gpiomem",
                      "PathInContainer": "/dev/gpiomem",
                      "CgroupPermissions": "mrw"
                    }
                  ]
                }
              }
            },
            "env": {
              "DB_HOST": {
                "value": "$DB_HOST"
              },
              "DB_KEY": {
                "value": "$DB_KEY"
              },
              "DATABASE_ID": {
                "value": "$DATABASE_ID"
              },
              "USERS_CONTAINER_ID": {
                "value": "$USERS_CONTAINER_ID"
              },
              "ACTIVITIES_CONTAINER_ID": {
                "value": "$ACTIVITIES_CONTAINER_ID"
              },
              "FACE_ENDPOINT": {
                "value": "$FACE_ENDPOINT"
              },
              "FACE_KEY": {
                "value": "$FACE_KEY"
              },
              "CV_ENDPOINT": {
                "value": "$CV_ENDPOINT"
              },
              "CV_KEY": {
                "value": "$CV_KEY"
              }
            }
          },
          "Mouth": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Mouth}",
              "createOptions": {
                "HostConfig": {
                  "Devices": [
                    {
                      "PathOnHost": "/dev/snd",
                      "PathInContainer": "/dev/snd",
                      "CgroupPermissions": "mrw"
                    }
                  ]
                }
              }
            },
            "env": {
              "AWS_DEFAULT_REGION": {
                "value": "$AWS_DEFAULT_REGION"
              },
              "AWS_ACCESS_KEY_ID": {
                "value": "$AWS_ACCESS_KEY_ID"
              },
              "AWS_SECRET_ACCESS_KEY": {
                "value": "$AWS_SECRET_ACCESS_KEY"
              }
            }
          },
          "Ble": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Ble}",
              "createOptions": {
                "NetworkingConfig": {
                  "EndpointsConfig": {
                    "host": {}
                  }
                },
                "HostConfig": {
                  "Privileged": true,
                  "NetworkMode": "host"
                }
              }
            },
            "env": {}
          },
          "Tray": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Tray}",
              "createOptions": {
                "HostConfig": {
                  "Privileged": true,
                  "Devices": [
                    {
                      "PathOnHost": "/dev/gpiomem",
                      "PathInContainer": "/dev/gpiomem",
                      "CgroupPermissions": "mrw"
                    }
                  ]
                }
              }
            },
            "env": {}
          },
          "Reminder": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Reminder}",
              "createOptions": {
                "HostConfig": {}
              }
            },
            "env": {
              "DB_HOST": {
                "value": "$DB_HOST"
              },
              "DB_KEY": {
                "value": "$DB_KEY"
              },
              "DATABASE_ID": {
                "value": "$DATABASE_ID"
              },
              "USERS_CONTAINER_ID": {
                "value": "$USERS_CONTAINER_ID"
              },
              "ACTIVITIES_CONTAINER_ID": {
                "value": "$ACTIVITIES_CONTAINER_ID"
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "SmartPillboxToIoTHub": "FROM /messages/modules/SmartPillbox/outputs/* INTO $upstream",
          "EyeToMouth": "FROM /messages/modules/SmartPillbox/outputs/mouth INTO BrokeredEndpoint(\"/modules/Mouth/inputs/script\")",
          "EyeToTray": "FROM /messages/modules/SmartPillbox/outputs/tray INTO BrokeredEndpoint(\"/modules/Tray/inputs/rotate\")",
          "ReminderToMouth": "FROM /messages/modules/Reminder/outputs/mouth INTO BrokeredEndpoint(\"/modules/Mouth/inputs/script\")",
          "ReminderToBle": "FROM /messages/modules/Reminder/outputs/ble INTO BrokeredEndpoint(\"/modules/Ble/inputs/tray\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}